<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/cream"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_alignParentTop="true">
      
      <LinearLayout
         android:id="@+id/playerOneLayout"
          android:layout_width="120dp"
          android:layout_height="wrap_content"
         android:orientation="vertical"
         android:gravity="center"
          android:background="@drawable/black_box"
          >
         <TextView
             android:id="@+id/firstPlayer"
             android:layout_marginStart="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Player One"
            android:gravity="center|top"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:maxLines="1"/>
         
         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
            android:src="@drawable/x_icon"
             android:layout_marginTop="20dp"
             android:layout_gravity="center"
             android:layout_marginBottom="20dp"
             />

      </LinearLayout>

      <TextView
          android:id="@+id/oneScore"
          android:layout_width="wrap_content"
          android:layout_height="90dp"
         android:text="0"
          android:padding="5dp"
          android:textColor="@color/blue"
         android:textSize="60sp"
          android:textStyle="bold"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text=":"
         android:textSize="40dp"
         android:textColor="@color/black"
         android:textStyle="bold"/>
      <TextView
          android:id="@+id/twoScore"
          android:layout_width="wrap_content"
          android:layout_height="90dp"
         android:text="0"
          android:padding="5dp"
          android:textColor="@color/red"
         android:textSize="60sp"
          android:textStyle="bold"
          />
      <LinearLayout
         android:id="@+id/playerTwoLayout"
          android:layout_width="120dp"
          android:layout_height="wrap_content"
         android:orientation="vertical"
         android:gravity="center"
          android:background="@drawable/black_box"
          >
         <TextView
             android:id="@+id/secondPlayer"
             android:layout_marginStart="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Player Two"
            android:gravity="center|top"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:maxLines="1"/>

         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
            android:src="@drawable/o_icon"
             android:layout_marginTop="20dp"
             android:layout_gravity="center"
             android:layout_marginBottom="20dp"
             />

      </LinearLayout>

   </LinearLayout>

   <LinearLayout
       android:id="@+id/board"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="50dp"
      android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="3"
         android:orientation="horizontal">

         <Button
             android:id="@+id/btn_0"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:textSize="50sp"
             android:layout_marginTop="10dp"
             android:layout_marginStart="10dp"
             android:padding="20dp"
             android:layout_marginEnd="5dp"
             android:layout_height="115dp"
            android:background="@drawable/box"
            />
         <Button
             android:id="@+id/btn_1"
             android:layout_width="0dp"
             android:textSize="50sp"
             android:layout_marginTop="10dp"
             android:layout_weight="1"
             android:layout_marginStart="10dp"
             android:padding="20dp"
             android:layout_marginEnd="5dp"
             android:layout_height="115dp"
            android:background="@drawable/box"
           />
         <Button
             android:id="@+id/btn_2"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:textSize="50sp"
             android:layout_marginTop="10dp"
             android:padding="20dp"
             android:layout_marginStart="10dp"
             android:layout_marginEnd="5dp"
             android:layout_height="115dp"
            android:background="@drawable/box"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="3"
         android:orientation="horizontal">
         <Button
             android:id="@+id/btn_3"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:textSize="50sp"
             android:layout_marginTop="10dp"
             android:layout_marginStart="10dp"
             android:padding="20dp"
             android:layout_marginEnd="5dp"
             android:layout_height="115dp"
            android:background="@drawable/box"
            />
         <Button
             android:id="@+id/btn_4"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:textSize="50sp"
             android:layout_marginTop="10dp"
             android:layout_marginStart="10dp"
             android:padding="20dp"
             android:layout_marginEnd="5dp"
             android:layout_height="115dp"
            android:background="@drawable/box"
           />
         <Button
             android:id="@+id/btn_5"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:textSize="50sp"
             android:layout_marginTop="10dp"
             android:padding="20dp"
             android:layout_marginStart="10dp"
             android:layout_marginEnd="5dp"
             android:layout_height="115dp"
            android:background="@drawable/box"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="3"
         android:orientation="horizontal">
         <Button
             android:id="@+id/btn_6"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:textSize="50sp"
             android:layout_marginTop="10dp"
             android:layout_marginStart="10dp"
             android:padding="20dp"
             android:layout_marginEnd="5dp"
             android:layout_height="115dp"
            android:background="@drawable/box"
            />
         <Button
             android:id="@+id/btn_7"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_marginTop="10dp"
             android:layout_marginStart="10dp"
             android:padding="20dp"
             android:textSize="50sp"
             android:layout_marginEnd="5dp"
             android:layout_height="115dp"
            android:background="@drawable/box"
           />
         <Button
             android:id="@+id/btn_8"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:textSize="50sp"
             android:layout_marginTop="10dp"
             android:padding="20dp"
             android:layout_marginStart="10dp"
             android:layout_marginEnd="5dp"
             android:layout_height="115dp"
            android:background="@drawable/box"
            />

      </LinearLayout>

      <Button
          android:id="@+id/resetGame"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
         android:layout_marginTop="10dp"
         android:padding="15dp"
         android:textColor="@color/white"
         android:textSize="30sp"
         android:text="Reset Game"
         android:backgroundTint="@color/blue"/>

   </LinearLayout>


</RelativeLayout>